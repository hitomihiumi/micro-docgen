{
  "name": "@hitomihiumi/micro-docgen",
  "version": "0.2.0",
  "description": "Quick and easy documentation for typescript projects.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write \"./{src,examples,docs,scripts}/**/*.{js,ts,md,mdx}\"",
    "docs": "tsx ./scripts/generate.ts",
    "example:md": "cd ./examples/markdown && tsx generator.ts",
    "example:json": "cd ./examples/awesome-widgets && tsx generator.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hitomihiumi/micro-docgen.git"
  },
  "keywords": [
    "docgen",
    "docs",
    "jsdoc",
    "typescript",
    "documentation",
    "api",
    "json",
    "typedoc"
  ],
  "author": "twlite <hello@twlite.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hitomihiumi/micro-docgen/issues"
  },
  "homepage": "https://github.com/hitomihiumi/micro-docgen#readme",
  "packageManager": "yarn@4.0.2",
  "dependencies": {
    "common-tags": "^1.8.2",
    "tmp": "^0.2.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/common-tags": "^1",
    "@types/node": "^20.10.2",
    "@types/tmp": "^0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.2"
  }
}
